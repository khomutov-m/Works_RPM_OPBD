<Window x:Class="Task_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <DockPanel>
            <CheckBox x:Name="RedCheckBox" Click="CheckBox_Click" IsChecked="True"/>
            <Label Content="Red" Width="45"/>
            <Slider x:Name="RedSlider" Minimum="0" Maximum="255" TickFrequency="1" TickPlacement="BottomRight" ValueChanged="Slider_ValueChanged"/>
        </DockPanel>
        <DockPanel>
            <CheckBox x:Name="GreenCheckBox" Click="CheckBox_Click" IsChecked="True"/>
            <Label Content="Green" Width="45"/>
            <Slider x:Name="GreenSlider" Minimum="0" Maximum="255" TickFrequency="1" TickPlacement="BottomRight" ValueChanged="Slider_ValueChanged"/>
        </DockPanel>
        <DockPanel>
            <CheckBox x:Name="BlueCheckBox" Click="CheckBox_Click" IsChecked="True"/>
            <Label Content="Blue" Width="45"/>
            <Slider x:Name="BlueSlider" Minimum="0" Maximum="255" TickFrequency="1" TickPlacement="BottomRight" ValueChanged="Slider_ValueChanged"/>
        </DockPanel>
    </StackPanel>
</Window>
