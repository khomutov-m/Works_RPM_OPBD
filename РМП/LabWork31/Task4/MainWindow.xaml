<Window x:Class="Task4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Цена:"/>
        <Slider x:Name="PriceSlider" Minimum="0" Maximum="1000000" TickFrequency="1" ValueChanged="Slider_ValueChanged"/>
        <Label Content="Процент:"/>
        <Slider x:Name="PercentSlider" Minimum="0" Maximum="100" TickFrequency="0.1" ValueChanged="Slider_ValueChanged"/>
        <Label x:Name="ResultLabel" Content="Результат:"/>
    </StackPanel>
</Window>
