<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <ListBox x:Name="ProductsListBox">
            <CheckBox Content="Молоко"/>
            <CheckBox Content="Хлеб"/>
            <CheckBox Content="Масло"/>
            <CheckBox Content="Сыр"/>
            <CheckBox Content="Вода"/>
        </ListBox>
        <Button x:Name="ShowProductsButton" Content="Вывести список выбранных товаров" Click="ShowProductsButton_Click"/>
    </StackPanel>
</Window>
