<Page x:Class="Task1.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Task1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <StackPanel Background="White">
        <Label Content="Логин"/>
        <TextBox x:Name="LoginTextBox"/>
        <Label Content="Пароль"/>
        <TextBox x:Name="PasswordTextBox"/>
        <Button x:Name="EnterButton" Content="Войти" Click="EnterButton_Click"/>
        <Button x:Name="RegistrationButton" Content="Зарегистрироваться" Click="RegistrationButton_Click"/>
    </StackPanel>
</Page>
