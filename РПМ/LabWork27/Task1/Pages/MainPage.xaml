<Page x:Class="Task1.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Task1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Button x:Name="Authorization" Content="Авторизация" Click="Authorization_Click"/>
        <Button x:Name="Registration" Content="Регистрация" Click="Registration_Click"/>
        <Button x:Name="Settings" Content="Настройки" Click="Settings_Click"/>
    </StackPanel>
</Page>
