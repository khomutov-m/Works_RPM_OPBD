<Window x:Class="Task2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid>
        <Canvas x:Name="Canvas">
            <Rectangle Width="200" Height="150" Fill="Gray" Canvas.Left="100" Canvas.Top="200"/>
            <Polygon Points="100 200 300 200 200 100" Fill="LightGray"/>
            <Rectangle Width="40" Height="40" Fill="LightBlue" Canvas.Left="120" Canvas.Top="220"/>
            <Rectangle Width="40" Height="40" Fill="LightBlue" Canvas.Left="240" Canvas.Top="220"/>
            <Rectangle Width="60" Height="100" Fill="DarkGray" Canvas.Left="170" Canvas.Top="250"/>
            <Ellipse Width="40" Height="40" Fill="LightBlue" Canvas.Left="180" Canvas.Top="140" Stroke="black"/>
            <Line X1="180" Y1="160" X2="220" Y2="160" Stroke="Black" StrokeThickness="2"/>
            <Line X1="200" Y1="180" X2="200" Y2="140" Stroke="Black" StrokeThickness="2"/>
        </Canvas>
    </Grid>
</Window>
